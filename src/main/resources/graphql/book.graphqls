schema {
    query: BookQueries,
    mutation: BookMutations
}

type BookQueries {
    books: [Book]
    book(id: ID!): Book
    bookByWriter(writer: String!): [Book]
}

type BookMutations {
    newBook(book: BookInput!): Book
    deleteBook(id: ID!): Boolean
    updateBook(id: ID!, book: BookInput!): Book
}

input BookInput {
    writer: String!,
    title: String!,
    count: Int!
}

type Book {
    id: ID!,
    writer: String!,
    title: String!,
    count: Int!
    ageLimit: Int!
}